{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "_id",
    "email",
    "firstName",
    "idActiviteit",
    "lastName",
    "numberOfPeople",
    "sentEmail"
  ],
  "properties": {
    "_id": {
      "$ref": "#/$defs/ObjectId"
    },
    "email": {
      "type": "string"
    },
    "firstName": {
      "type": "string"
    },
    "idActiviteit": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "numberOfPeople": {
      "type": "string"
    },
    "sentEmail": {
      "type": "string"
    }
  },
  "$defs": {
    "ObjectId": {
      "type": "object",
      "properties": {
        "$oid": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{24}$"
        }
      },
      "required": [
        "$oid"
      ],
      "additionalProperties": false
    }
  }
}